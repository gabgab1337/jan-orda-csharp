<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <!-- Two way -->
            <Entry
                x:Name="txtfield"
                Placeholder="Dodaj nowe zadanie"
                Text="{Binding NewTodoTitle, Mode=TwoWay}"/>

            <Label
                Text="{Binding TitleCharacterCount}"
                FontAttributes="Bold"
                HorizontalOptions="Center"/>

            <Button
                x:Name="bttn"
                Text="Dodaj zadanie"
                IsEnabled="{Binding IsAddButtonEnabled}"
                />

            <Button
                x:Name="bttn2"
                Text="usun"
                Clicked="OnClearedClicked"/>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
